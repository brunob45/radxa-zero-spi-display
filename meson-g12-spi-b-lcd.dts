/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/gpio/meson-g12a-gpio.h>
#include <dt-bindings/interrupt-controller/irq.h>

/ {
	metadata {
		title = "Enable FBTFT on SPI-B";
		compatible = "radxa,zero", "radxa,zero2";
		category = "misc";
		exclusive = "spicc1", "GPIOH_4", "GPIOH_5", "GPIOH_6", "GPIOH_7";
		description = "Enable FBTFT on SPI-B.";
	};
};

&spicc1 {
        	#address-cells = <1>;
        	#size-cells = <0>;
        	pinctrl-0 = <&spicc1_pins>;
        	pinctrl-names = "default";
        	cs-gpios = <&gpio GPIOH_6 GPIO_ACTIVE_LOW>;
        	status = "okay";
        	st7789v@0 {
        		compatible = "sitronix,st7789v";
        		status = "okay";
        		reg = <0>;
        		spi-max-frequency = <10000000>;
                        width = <135>;
                        height = <240>;
                        buswidth = <8>;
                        fps = <60>;
                        rotate = <270>;
                        debug = <1>;

                        // configure pin assigment below
                        reset-gpios = <0x2b 8 1>;       // pin 36
                        dc-gpios = <0x2b 74 0>;         // pin 12
                        led-gpios = <0x2b 73 0>;        // pin 18
        	};
};
